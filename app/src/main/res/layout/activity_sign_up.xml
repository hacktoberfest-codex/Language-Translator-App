<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.elements.SignUpActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:fontFamily="@font/inria_sans_bold"
            android:textColor="@color/dark_grey"
            android:text="Sign Up"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/signupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/inika"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:inputType="text"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="407dp" />

        <EditText
            android:id="@+id/signupemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/inika"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="407dp" />

        <EditText
            android:id="@+id/signupusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/inika"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:inputType="text"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="407dp" />

        <EditText
            android:id="@+id/signuppassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/inika"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="407dp" />
        <EditText
            android:id="@+id/signupconfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/inika"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="407dp" />

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/theme_blue"
            android:fontFamily="@font/inria_sans_bold"
            android:text="Sign Up"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/signupredirectlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Already an User? Login"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/inria_sans_light"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
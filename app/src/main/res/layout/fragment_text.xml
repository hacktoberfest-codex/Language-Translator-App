<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.elements.TextFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/from_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:clickable="true"
        android:gravity="start|top"
        android:padding="15dp"
        android:textColorHint="@color/mid_grey"
        android:hint="From"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/to_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:textColorHint="@color/mid_grey"
        android:gravity="start|top"
        android:padding="15dp"
        android:hint="To"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.802" />

    <ImageView
        android:id="@+id/swapLang"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/exchange_alt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/fromLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/spinner_bg"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/toLang"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/toLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:padding="4dp"
        android:background="@drawable/spinner_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fromLang"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/from_audio"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:background="@color/theme_blue"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintBottom_toTopOf="@+id/from_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromLang"
        app:layout_constraintVertical_bias="0.855"
        app:tint="@color/white" />


    <ImageButton
        android:id="@+id/to_audio"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:background="@color/theme_blue"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_textbox"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
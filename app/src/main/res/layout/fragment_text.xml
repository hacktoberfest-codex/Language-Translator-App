<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.elements.TextFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/from_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:clickable="true"
        android:fontFamily="@font/inika"
        android:gravity="start|top"
        android:hint="From"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/mid_grey"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <TextView
        android:id="@+id/to_textbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/text_input_background"
        android:fontFamily="@font/inika"
        android:gravity="start|top"
        android:hint="To"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/mid_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.146" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_grey"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/fromLang"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/spinner_bg"
                android:backgroundTint="@color/theme_blue"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/toLang"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/swapLang"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="10dp"
                android:src="@drawable/exchange_alt"
                app:tint="@color/dark_grey" />

            <Spinner
                android:id="@+id/toLang"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_bg"
                android:backgroundTint="@color/theme_blue"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fromLang"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/from_audio"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@color/theme_blue"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintBottom_toTopOf="@+id/from_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/to_audio"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@color/theme_blue"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_textbox"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>